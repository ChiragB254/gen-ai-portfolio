[Unit]
Description=Chirag Portfolio Next.js Application
Documentation=https://github.com/chirag/chirag-portfolio-nextjs
After=network.target docker.service
Requires=docker.service

[Service]
Type=forking
RemainAfterExit=yes
WorkingDirectory=/opt/chirag-portfolio
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down
ExecReload=/usr/bin/docker-compose restart
TimeoutStartSec=0
Restart=on-failure
RestartSec=10
User=root
Group=root

[Install]
WantedBy=multi-user.target